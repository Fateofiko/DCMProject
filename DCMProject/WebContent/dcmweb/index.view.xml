<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="dcmweb.index" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Device Content Management">
		<headerContent>
			<Button icon="sap-icon://add" press="onAdd" />
		</headerContent>
		<Table id="idProductsTable" inset="false" items="{/Tags}"
			itemPress="rowSelected">
			<headerToolbar>
				<Toolbar>
					<Label text="Tags"></Label>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="Id" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Name" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Description" />
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Detail" detailPress="onDetailPress">
					<cells>
						<ObjectIdentifier title="{Id}" />
						<Text text="{Name}" />
						<Text text="{Description}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</core:View>