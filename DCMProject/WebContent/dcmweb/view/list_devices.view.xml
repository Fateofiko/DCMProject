<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="net.cb.dcm.frontend.controller.list_devices"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Device Content Management" showNavButton="true"
    	navButtonTap="onNavigateBack">
		<Table id="idProductsTable" inset="false" items="{/Devices}"
			itemPress="onRowSelected" templateShareable="true" >
			<headerToolbar>
				<Toolbar>
					<Label text="Devices"></Label>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="Id" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Name" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Description" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Device Type" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="IP Address" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Model" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Status" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Functions" />
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Detail" detailPress="onDetailPress">
					<cells>
						<ObjectIdentifier title="{Id}" />
						<Text text="{Name}" />
						<Text text="{Description}" />
						<Text text="{DevType}" />
						<Text text="{Ip}" />
						<Text text="{Model}" />
						<List id="idList"
							  items="{DeviceStatusDetails/DeviceStatusValueDetails}" 
							  growing="true"
							  growingThreshold="2"
						 	  growingScrollToLoad="false">
							<items>
								<StandardListItem templateShareable="true"
									title="{Id}"
									description="{Value}"
								/>
							</items>
							
						</List>
						
						<Button id="ShowStatusBtn" icon="sap-icon://add" press="onButtonPress"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</core:View>