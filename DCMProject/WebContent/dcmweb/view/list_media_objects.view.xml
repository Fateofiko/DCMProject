<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="net.cb.dcm.frontend.controller.list_media_objects"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Device Content Management" showNavButton="true"
    	navButtonTap="onNavigateBack">
		<headerContent>
			<Button icon="sap-icon://add" press="onAdd" />
		</headerContent>
		<Table id="idProductsTable" inset="false" items="{/MediaContents}"
			itemPress="rowSelected">
			<headerToolbar>
				<Toolbar>
					<Label text="Media Objects"></Label>
				</Toolbar>
			</headerToolbar>
			<columns>
				<!--
				<Column>
					<Text text="image"/>
				</Column>
				-->
				<Column>
					<Text text="Id" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
					<Text text="Name" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Description" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Media Type" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
					<Text text="Duration" />
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Detail" detailPress="onDetailPress">
					<cells>
						<!--<Image src="http://localhost:8080/DCMProject/get?filename={Thumbnail}"/>-->
						<ObjectIdentifier title="{Id}" />
						<Text text="{Name}" />
						<Text text="{Description}" />
						<Text text="{MediaType}" />
						<Text text="{Duration}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</core:View>